@model IEnumerable<MvcApiCubosAWS.Models.Cubo>

@{
    ViewData["Title"] = "Index";
}

<h4>Index</h4>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCubo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCubo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    <img src="@item.Imagen" style="width: 150px; height: 150px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new {  id=item.IdCubo  }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.IdCubo  }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.IdCubo  }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
